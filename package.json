{
    "name": "little-cubes",
    "version": "0.0.1",
    "description": "Just a modular, web-based voxel building game I created for my kids",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && node scripts/post-build.js",
        "preview": "vite preview",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "format": "prettier --write \"src/**/*.js\" \"*.{json,md,html,css}\"",
        "format:check": "prettier --check \"src/**/*.js\" \"*.{json,md,html,css}\"",
        "check": "npm run lint && npm run format:check",
        "fix": "npm run lint:fix && npm run format"
    },
    "keywords": [
        "little-cubes",
        "game",
        "voxel",
        "3d",
        "webgl"
    ],
    "author": "Pau Garcia-Mila",
    "license": "MIT",
    "dependencies": {
        "three": "^0.182.0"
    },
    "devDependencies": {
        "vite": "^7.2.2",
        "vite-plugin-singlefile": "^2.3.0",
        "eslint": "^9.39.1",
        "prettier": "^3.6.2",
        "@eslint/js": "^9.39.1",
        "globals": "^16.5.0"
    }
}
